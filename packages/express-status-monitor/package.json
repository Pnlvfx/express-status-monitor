{
  "name": "@goatjs/express-status-monitor",
  "description": "Realtime monitor for Express server appliations",
  "version": "2025.2.6",
  "author": {
    "email": "simonegauli@gmail.com",
    "name": "Simone Gauli"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pnlvfx/express-status-monitor.git"
  },
  "keywords": [
    "node",
    "status",
    "monitoring",
    "express",
    "charts",
    "performance"
  ],
  "license": "MIT",
  "type": "module",
  "main": "./dist/status-monitor.js",
  "module": "./dist/status-monitor.js",
  "types": "./dist/status-monitor.d.ts",
  "exports": {
    "types": "./dist/status-monitor.d.ts",
    "import": "./dist/status-monitor.js",
    "require": "./dist/status-monitor.js"
  },
  "scripts": {
    "generate:event-loop-stats": "node ./tools/generate-event-loop-types.ts src/types/event-loop-stats.ts",
    "types": "yarn generate:event-loop-stats",
    "tsc": "tsc --noEmit true",
    "unused": "node ./tools/unused.ts",
    "test": "rimraf coverage && jest --coverage",
    "lint": "eslint",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "prepare": "husky && npm run build",
    "prepack": "yarn build",
    "prepublishOnly": "yarn test"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "public"
  ],
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@goatjs/eslint": "github:Pnlvfx/eslint",
    "@goatjs/ts-unused-exports": "github:Pnlvfx/goatjs#workspace=@goatjs/ts-unused-exports",
    "@goatjs/typescript-config": "github:Pnlvfx/typescript-config",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.1",
    "@types/on-headers": "^1.0.4",
    "@types/pidusage": "^2.0.5",
    "eslint": "9.29.0",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-unicorn": "^59.0.1",
    "event-loop-stats": "^1.4.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "socket.io": "^4.8.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  },
  "dependencies": {
    "debug": "^4.4.1",
    "handlebars": "^4.7.8",
    "on-headers": "^1.0.2"
  },
  "peerDependencies": {
    "event-loop-stats": "*",
    "socket.io": "*"
  },
  "peerDependenciesMeta": {
    "event-loop-stats": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
